<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Eshop</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/CSS/bootstrap.min.css")
    @Styles.Render("~/CSS/font-awesome.min.css")
    @Styles.Render("~/CSS/intro_reset.css")
    @Styles.Render("~/CSS/intro_style.css")
    @Styles.Render("~/CSS/nouislider.min.css")
    @Styles.Render("~/CSS/slick-theme.css")
    @Styles.Render("~/CSS/slick.css")
    @Styles.Render("~/CSS/style.css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/jquery-3.3.1.intellisense.js")
    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/Scripts/jquery-3.3.1.slim.js")
    @Scripts.Render("~/Scripts/jquery-3.3.1.slim.min.js")
    @Scripts.Render("~/Scripts/jquery.validate-vsdoc.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
    @Scripts.Render("~/Scripts/modernizr-2.8.3.js")

</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Eshop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "MainPage", "MainPage")</li>
                    <li>@Html.ActionLink("Categories", "Categories", "Categories")</li>
                    <li>@Html.ActionLink("Customer service", "CustomerService", "CustomerService")</li>
                    <li>@Html.ActionLink("Forums", "Forums", "Forums")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Contact")</li>
                    <li>@Html.ActionLink("About us", "AboutUs", "AboutUs")</li>
                    <li>@Html.ActionLink("App", "App", "App") </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Eshop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
